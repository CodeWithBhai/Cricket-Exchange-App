<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/light_wight"
    android:layout_height="match_parent"
    tools:context=".More.PremiumExchangeActivity">

    <LinearLayout
        android:id="@+id/iccLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:onClick="back"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/home_text_color" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="CREX Premium"
            android:fontFamily="@font/rajdhani_bold"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cx_active_icons" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="center"
                android:textColor="@color/premium_color"
                android:fontFamily="@font/euclid_circular_a_bold"
                android:text="CREX - Cricket Exchange"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_path_15385"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rajdhani_bold"
                    android:textColor="@color/premium_font_color"
                    android:text="PREMIUM"
                    android:textSize="@dimen/_18sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/white_black_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:fontFamily="@font/euclid_circular_a_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="@string/login"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/loginPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loginNow"
                        android:fontFamily="@font/euclid_circular_a_medium"
                        android:textColor="@color/premium_blue"
                        android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                            app:tint="@color/premium_blue" />

                    </LinearLayout>
                </LinearLayout>

               <!-- image slider-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:background="@color/light_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_bg_offer"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:paddingVertical="@dimen/_20sdp">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:fontFamily="@font/rajdhani_bold"
                            android:text="₹ 100.00/mo"
                            android:textSize="@dimen/dimen_18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:background="@drawable/blue_bg"
                                android:fontFamily="@font/rajdhani_semi_bold"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="beginner"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/elevensp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:fontFamily="@font/euclid_circular_a_medium"
                                android:text="₹"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_25sdp"
                                app:srcCompat="@drawable/ic_baseline_attach_money_24" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/euclid_circular_a_medium"
                                android:text="100.00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_25sdp" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/rajdhani_semi_bold"
                                android:gravity="right"
                                android:text="1 Month"
                                android:textColor="@color/theme"
                                android:textSize="@dimen/_25sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/offer_view_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:background="@drawable/red_bg_offer"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:paddingVertical="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:fontFamily="@font/rajdhani_bold"
                                android:gravity="center"
                                android:text="₹ 100.00/mo"
                                android:textSize="@dimen/dimen_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10ssp"
                                android:background="@drawable/premium_package_bg"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:paddingVertical="@dimen/fivedp"
                                android:text="Save 34%"
                                android:textColor="#5b5b5b"
                                android:textSize="@dimen/dimen_15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:background="@drawable/popular_bg_color"
                                android:fontFamily="@font/rajdhani_semi_bold"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Popular"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/elevensp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:fontFamily="@font/euclid_circular_a_medium"
                                android:text="₹"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_25sdp"
                                app:srcCompat="@drawable/ic_baseline_attach_money_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/euclid_circular_a_medium"
                                android:text="200.00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_25sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/rajdhani_semi_bold"
                                android:gravity="right"
                                android:text="3 Months"
                                android:textColor="@color/theme"
                                android:textSize="@dimen/_25sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/offer_view_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:background="@drawable/best_deal_main_premium"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:paddingVertical="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:fontFamily="@font/rajdhani_bold"
                                android:gravity="center"
                                android:text="₹ 41/mo"
                                android:textSize="@dimen/dimen_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10ssp"
                                android:background="@drawable/premium_package_bg"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:paddingVertical="@dimen/fivedp"
                                android:text="Save 59%"
                                android:textColor="@color/premium_best"
                                android:textSize="@dimen/dimen_15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:background="@drawable/best_deal_bg_premium"
                                android:fontFamily="@font/rajdhani_semi_bold"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="best deal"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/elevensp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:fontFamily="@font/euclid_circular_a_medium"
                                android:text="₹"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_25sdp"
                                app:srcCompat="@drawable/ic_baseline_attach_money_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/euclid_circular_a_medium"
                                android:text="500.00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_25sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/rajdhani_semi_bold"
                                android:gravity="right"
                                android:text="1 Month"
                                android:textColor="@color/theme"
                                android:textSize="@dimen/_25sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/offer_view_bg" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/offer_view_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="50dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/euclid_circular_a_medium"
                            android:text="@string/privacyPolicy"
                            android:textColor="@color/black"
                            android:textSize="@dimen/eleven" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/euclid_circular_a_regular"
                            android:text="@string/privact2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/eleven" />

                    </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/euclid_circular_a_regular"
                            android:text="@string/privact3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/eleven" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>