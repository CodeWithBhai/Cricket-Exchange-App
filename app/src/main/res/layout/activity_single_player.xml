<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SinglePlayersDetails.SinglePlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:orientation="vertical">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layoutTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?android:attr/colorControlHighlight"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:onClick="back"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/home_text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="IND"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="VS"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="PAK"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text=","
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="2ND ODI"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/euclid_circular_a_regular"
                        android:text="Seasons"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/teal_200" />

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/teal_200" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tayyab"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/euclid_circular_a_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tahir"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/euclid_circular_a_medium"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fivedp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/cx_logo_one"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_2dot2sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tahir"
                        android:layout_margin="@dimen/dimen_2dot2sp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/euclid_circular_a_light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/dimen_2dot2sp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/euclid_circular_a_light"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29 yrs"
                        android:layout_margin="@dimen/dimen_2dot2sp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/euclid_circular_a_light"/>

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_20sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/cricketer_img_one"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>


    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_first"
        android:layout_width="match_parent"
        app:tabIndicatorColor="@color/red"
        android:paddingVertical="@dimen/fivedp"
        app:tabIndicatorAnimationMode="linear"
        app:tabGravity="fill"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/home_text_color"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/TabLayoutStyle"
        android:layout_below="@id/layoutTheme"
        android:background="@color/theme"
        app:tabTextColor="@color/tab_bg_color">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overview" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matches" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player Info" />



    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout"
        android:id="@+id/view_pager"/>

</LinearLayout>