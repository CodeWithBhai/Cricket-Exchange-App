<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SinglePlayersDetails.Fragments.SingleNewsFrag">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:gravity="center"
       android:orientation="vertical">

       <ImageView
           android:layout_width="@dimen/_100sdp"
           android:layout_height="@dimen/_100sdp"
           android:src="@drawable/ic_baseline_list_24"
           android:layout_gravity="center"
           app:tint="@color/light_wight" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="News isn't available at the moments"
           android:textColor="@color/fontColor"
           android:fontFamily="@font/euclid_circular_a_medium"
           android:textSize="@dimen/_14sdp"/>

       <TextView
           android:layout_width="@dimen/_240sdp"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:text="@string/news_text"
           android:maxLines="2"
           android:fontFamily="@font/euclid_circular_a_light"
           android:textSize="@dimen/_10ssp"/>

   </LinearLayout>

</LinearLayout>