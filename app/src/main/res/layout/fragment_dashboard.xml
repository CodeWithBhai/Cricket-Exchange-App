<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme"
            android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <io.github.florent37.shapeofview.shapes.RoundRectView
                                android:layout_width="90dp"
                                android:layout_height="110dp"
                                android:elevation="4dp"
                                app:shape_roundRect_bottomLeftRadius="10dp"
                                app:shape_roundRect_bottomRightRadius="10dp"
                                app:shape_roundRect_topLeftRadius="10dp"
                                app:shape_roundRect_topRightRadius="10dp"
                                app:shape_roundRect_borderColor="@android:color/white"
                                app:shape_roundRect_borderWidth="1dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/icon_one" />

                            </io.github.florent37.shapeofview.shapes.RoundRectView>

                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:elevation="4dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp"
                            app:shape_roundRect_borderColor="@android:color/white"
                            app:shape_roundRect_borderWidth="1dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/icon_two" />

                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:elevation="4dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp"
                            app:shape_roundRect_borderColor="@android:color/white"
                            app:shape_roundRect_borderWidth="1dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/icon_three" />

                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:elevation="4dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp"
                            app:shape_roundRect_borderColor="@android:color/white"
                            app:shape_roundRect_borderWidth="1dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/icon_four" />

                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:elevation="4dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp"
                            app:shape_roundRect_borderColor="@android:color/white"
                            app:shape_roundRect_borderWidth="1dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/icon_five" />

                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:elevation="4dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp"
                            app:shape_roundRect_borderColor="@android:color/white"
                            app:shape_roundRect_borderWidth="1dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/icon_six" />

                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/layoutTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/rajdhani_bold"
                android:gravity="center"
                android:text="IPL"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/rajdhani_bold"
                android:gravity="center"
                android:text="2022"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/euclid_circular_a_regular"
                android:gravity="center"
                android:text="26 Jan to 29 jan"
                android:textColor="@color/home_text_color"
                android:textSize="@dimen/ninesp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_12dp"
                android:layout_gravity="center|right"
                android:src="@drawable/ic_icon_ionic_ios_notifications"
                android:tint="@color/font_icon_color" />

            </LinearLayout>


        </LinearLayout>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            app:tabIndicatorColor="@color/red"
            app:tabMode="scrollable"
            app:tabIndicatorAnimationMode="linear"
            app:tabSelectedTextColor="@color/home_text_color"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/TabLayoutStyle"
            android:layout_below="@id/layoutTheme"
            android:background="@color/theme"
            app:tabTextColor="#596c79">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matches" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Squads" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="points Table" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_pager"
            android:id="@+id/view_pager"/>


    </LinearLayout>
    </LinearLayout>

</RelativeLayout>