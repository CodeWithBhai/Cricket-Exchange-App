<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CricketUnderPackage.CricketUnderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/unser_gradient_bg"
        android:orientation="vertical">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layoutTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?android:attr/colorControlHighlight"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:onClick="back"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/home_text_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="IND"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="VS"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="PAK"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text=","
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/rajdhani_bold"
                        android:gravity="center"
                        android:text="2ND ODI"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/dimen_18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/fivedp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_bold"
                    android:gravity="center"
                    android:text="Asia Cup 2022"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_circular_a_regular"
                        android:gravity="center"
                        android:text="27 Aug to 11 Sep 2022"
                        android:layout_gravity="center"
                        android:textColor="@color/home_text_color"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:layout_width="@dimen/_15ssp"
                        android:layout_height="@dimen/_15ssp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/fivedp"
                        android:src="@drawable/ic_notifications_black_24dp"
                        android:gravity="center"
                        app:tint="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_circular_a_regular"
                        android:gravity="center"
                        android:text="Seasons"
                        android:layout_gravity="center"
                        android:textColor="@color/season_color"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:layout_width="@dimen/_15ssp"
                        android:layout_height="@dimen/_15ssp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/fivedp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:gravity="center"
                        app:tint="@color/season_color" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:elevation="4dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/icon_one" />

                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView28"
                        android:visibility="gone"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/fivedp"
                        android:ellipsize="end"
                        android:fontFamily="@font/euclid_circular_a_medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="IND vs TSA 2022..."
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_first"
            android:layout_width="match_parent"
            app:tabIndicatorColor="@color/red"
            android:paddingVertical="@dimen/fivedp"
            app:tabIndicatorAnimationMode="linear"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/home_text_color"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/TabLayoutStyle"
            android:layout_below="@id/layoutTheme"
            android:background="@color/theme"
            app:tabTextColor="@color/tab_bg_color">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matches" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Squads" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="points Table" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info" />

        </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout"
        android:id="@+id/view_pager"/>

</LinearLayout>