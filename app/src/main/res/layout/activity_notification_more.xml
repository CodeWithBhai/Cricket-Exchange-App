<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#f1f1f1"
    android:background="@color/light_wight"
    tools:context=".Notifications.NotificationMoreActivity">

    <LinearLayout
        android:id="@+id/iccLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:onClick="back"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/home_text_color" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Notifications"
            android:fontFamily="@font/euclid_circular_a_bold"
            android:textColor="@color/home_text_color"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/iccLayout"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10ssp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/euclid_circular_a_medium"
            android:padding="5dp"
            android:text="All Notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteensp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/_19sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/euclid_circular_a_medium"
                    android:text="Allow Notifications"
                    android:textColor="@color/more_text_color"
                    android:textSize="@dimen/dimen_14dp" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SCBSwitch"
                    android:textOff="OFF"
                    android:textOn="ON"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_wight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/_19sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/euclid_circular_a_medium"
                    android:text="Sound"
                    android:textColor="@color/more_text_color"
                    android:textSize="@dimen/dimen_14dp" />

                <Switch

                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SCBSwitch"
                    android:textOff="OFF"
                    android:textOn="ON"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_wight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/_19sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/euclid_circular_a_medium"
                    android:text="Vibration"
                    android:textColor="@color/more_text_color"
                    android:textSize="@dimen/dimen_14dp" />

                <Switch
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/SCBSwitch"
                    android:textOff="OFF"
                    android:textOn="ON"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/euclid_circular_a_medium"
            android:padding="5dp"
            android:text="Your Notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteensp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/_19sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/euclid_circular_a_medium"
                    android:text="Matches"
                    android:textColor="@color/more_text_color"
                    android:textSize="@dimen/dimen_14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_wight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/_19sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/euclid_circular_a_medium"
                    android:text="Series"
                    android:textColor="@color/more_text_color"
                    android:textSize="@dimen/dimen_14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/euclid_circular_a_medium"
            android:padding="5dp"
            android:text="Default Notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteensp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/euclid_circular_a_medium"
                        android:text="Breaking News"
                        android:textColor="@color/more_text_color"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/euclid_circular_a_regular"
                        android:text="Breaking News"
                        android:textSize="@dimen/eleven" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:checked="true"
                    android:layout_marginRight="10dp"
                    android:buttonTint="#2d6fac"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_wight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/fivedp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/euclid_circular_a_medium"
                        android:text="Breaking News"
                        android:textColor="@color/more_text_color"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/euclid_circular_a_regular"
                        android:text="Breaking News"
                        android:textSize="@dimen/eleven" />

                </LinearLayout>
                <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:checked="true"
                    android:layout_marginRight="10dp"
                    android:buttonTint="#2d6fac"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>